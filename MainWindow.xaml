<Window x:Class="lokalayan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LokaLayan - Login" Height="350" Width="400"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#3498db" Padding="10">
            <StackPanel>
                <TextBlock Text="LOKALAYAN" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Sistem Jual Beli Ikan Lokal" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Login Form -->
        <Border Grid.Row="1" Margin="20" BorderBrush="#ddd" BorderThickness="1" CornerRadius="5" Padding="20">
            <StackPanel>
                <TextBlock Text="Login" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                
                <!-- Username -->
                <TextBlock Text="Email:" Margin="0,5,0,2"/>
                <TextBox x:Name="txtEmail" Padding="5" Margin="0,0,0,10"/>
                
                <!-- Password -->
                <TextBlock Text="Password:" Margin="0,5,0,2"/>
                <PasswordBox x:Name="txtPassword" Padding="5" Margin="0,0,0,20"/>
                
                <!-- Login Button -->
                <Button x:Name="btnLogin" Content="Login" Padding="5" 
                        Background="#3498db" Foreground="White" 
                        Click="btnLogin_Click"/>
                
                <!-- Message -->
                <TextBlock x:Name="txtMessage" Margin="0,10,0,0" Foreground="Red" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>